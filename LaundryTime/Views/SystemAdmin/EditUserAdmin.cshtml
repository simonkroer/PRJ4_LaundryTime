@model SystemAdminViewModel
@{
    ViewData["Title"] = "Edit";
}
<div class="column left">
	<img class="rounded float-right imghoover" style="max-width: 120px; margin-left: 30px" src="~/Images/logo.png" />
	

	<div class="row">
		<div class="col-md-10">
			<a class="btn btn-primary" asp-action="Index"> <i class="fas fa-backspace"></i>&nbsp;Back</a>

			<form asp-action="EditUserAdmin">

				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="UserAdmin.Name"></label>
					<input asp-for="UserAdmin.Name" class="form-control"/>
					<span asp-validation-for="UserAdmin.Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UserAdmin.WorkAddress.StreetAddress"></label>
					<input asp-for="UserAdmin.WorkAddress.StreetAddress" class="form-control"/>
					<span asp-validation-for="UserAdmin.WorkAddress.StreetAddress" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UserAdmin.WorkAddress.Zipcode"></label>
					<input asp-for="UserAdmin.WorkAddress.Zipcode" class="form-control"/>
					<span asp-validation-for="UserAdmin.WorkAddress.Zipcode" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UserAdmin.PhoneNumber"></label>
					<input asp-for="UserAdmin.PhoneNumber" class="form-control"/>
					<span asp-validation-for="UserAdmin.PhoneNumber" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UserAdmin.PaymentMethod"></label>
					<input asp-for="UserAdmin.PaymentMethod" class="form-control"/>
					<span asp-validation-for="UserAdmin.PaymentMethod" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UserAdmin.PaymentDueDate"></label>
					<input asp-for="UserAdmin.PaymentDueDate" class="form-control"/>
					<span asp-validation-for="UserAdmin.PaymentDueDate" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="UserAdmin.Email"></label>
					<input asp-for="UserAdmin.Email" class="form-control"/>
					<span asp-validation-for="UserAdmin.Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<a class="btn btn-success" asp-action="EditUserAdmin"> <i class="fas fa-user-tie"></i>&nbsp;Save</a>
				</div>
			</form>
		</div>
	</div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
