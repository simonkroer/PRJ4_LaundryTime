@model UserAdmin
@{
    ViewData["Title"] = "Create";
}
<div id="marginRegister">
    <img class="rounded float-right imghoover" style="max-width: 120px; margin-left: 30px" src="~/Images/logo.png" />
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditUserAdmin">
                <h4>User Admin</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkAddress.StreetAddress"></label>
                    <input asp-for="WorkAddress.StreetAddress" class="form-control" />
                    <span asp-validation-for="WorkAddress.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkAddress.Zipcode"></label>
                    <input asp-for="WorkAddress.Zipcode" class="form-control" />
                    <span asp-validation-for="WorkAddress.Zipcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentMethod"></label>
                    <input asp-for="PaymentMethod" class="form-control" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentDueDate"></label>
                    <input asp-for="PaymentDueDate" class="form-control" />
                    <span asp-validation-for="PaymentDueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="raise btn btnColor" asp-action="Index">Back to control panel</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
