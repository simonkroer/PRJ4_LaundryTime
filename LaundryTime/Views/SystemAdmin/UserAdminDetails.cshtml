@model SystemAdminViewModel
@{
	ViewData["Title"] = "Details for "+ Model.UserAdmin.Name;
}


<div class="column left">

    <div class="headerCSS">
        <p style="font-size: 21px">@ViewData["Title"]</p>
    </div>
    <br />
    <table>
	    <tr>
		    <td>
			    <a class="btn btn-success" asp-action="Index">
				    <i class="fas fa-backspace"></i>&nbsp;Back</a>
		    </td>
		    <td>
			    <a class="btn btn-primary" asp-controller="UserAdmin" asp-action="IndexMachines" asp-route-username="@Model.UserAdmin.Machines">
				    <i class="fas fa-eye"></i>&nbsp;Show Machines
			    </a>
		    </td>
		    <td>
			    <a class="btn btn-primary" asp-controller="UserAdmin" asp-action="MyUsers" asp-route-username="@Model.UserAdmin.UserName">
				    <i class="fas fa-users"></i>&nbsp; Show Users</a>
		    </td>
		   
	    </tr>
    </table>
    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width: 100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(model => model.UserAdmin.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAdmin.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAdmin.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAdmin.PaymentMethod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAdmin.PaymentDueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserAdmin.WorkAddress)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.UserAdmin.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserAdmin.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserAdmin.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserAdmin.PaymentMethod)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserAdmin.PaymentDueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.UserAdmin.WorkAddress)
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="headerCSS">
        <p style="font-size: 16px">Machines</p>
    </div>

    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width: 100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(model => model.Machine.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Machine.ModelNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Machine.InstallationDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Machine item in Model.UserAdmin.Machines)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModelNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstallationDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

