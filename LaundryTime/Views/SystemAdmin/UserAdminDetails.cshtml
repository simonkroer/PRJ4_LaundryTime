@model UserAdminViewModel
@{
    ViewData["Title"] = "Details";
}
<div>
    <img class="rounded float-right imghoover" style="max-width: 120px; margin-left: 30px" src="~/Images/logo.png" />
    <h1>@ViewData["Title"]</h1>
	
    <dl class="row">
		
	    <dd class = "col-sm-10">
		    @Model.CurrentUserAdmin.Name
	    </dd>

	    <dd class = "col-sm-10">
		    @Model.CurrentUserAdmin.Email)
	    </dd>

	    <dd class = "col-sm-10">
		    @Model.CurrentUserAdmin.WorkAddress)
	    </dd>

	    <dd class = "col-sm-10">
		    @Model.CurrentUserAdmin.PaymentMethod
	    </dd>

	    <dd class = "col-sm-10">
		    @Model.CurrentUserAdmin.Machines
	    </dd>
	   
    </dl>
</div>

<div>
    <a asp-action="Index">Back to control panel</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

