@using Microsoft.AspNetCore.Identity
@using LaundryTime.Data.Models
@inject SignInManager<LaundryUser> SignInManagerLaundryUser
@inject SignInManager<UserAdmin> SignInManagerUserAdmin
@inject SignInManager<SystemAdmin> SignInManagerSystemAdmin
@inject UserManager<LaundryUser> LaundryUserManager
@inject UserManager<UserAdmin> UserAdminManager
@inject UserManager<SystemAdmin> SystemAdminUserManager

<ul class="navbar-nav">
    @if (SignInManagerLaundryUser.IsSignedIn(User) || SignInManagerSystemAdmin.IsSignedIn(User) || SignInManagerUserAdmin.IsSignedIn(User) )
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
</ul>
