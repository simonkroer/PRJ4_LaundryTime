@model LaundryTimeWebAppWithIdentity.Models.Calender.DatePickerModel
@{
    ViewData["Title"] = "Calender";
}
<head>
    @* Calender date picker *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/CalenderStyle.css" />
</head>

<body>
    <h1>@ViewData["Title"]</h1>

    <div>
        <br />
        <h4>Select a date</h4>
        @using (Html.BeginForm())
        {
            @Html.EditorFor(model => model.Datedata, new { htmlAttributes = new { @class = "datepicker", @Type = "date" } })

        }
        <br />
    </div>

    
    @section Scripts
    {
        <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
        <script>
            $(document).ready(function () {
                $(".datepicker").datepicker({
                    dateFormat: "dd-mm-yy",
                    changemonth: true,
                    changeyear: true
                });
            });
        </script>
    }
    <p>This is a Calender for Landry Time.</p>
    

